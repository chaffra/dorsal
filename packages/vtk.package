NAME=vtk-5.4.2
SOURCE=http://www.vtk.org/files/release/5.4/
PACKING=.tar.gz
BUILDCHAIN=autotools
EXTRACTSTO=VTK
PROCS=1

package_specific_setup () {
    chmod 600 Utilities/vtktiff/tif_fax3sm.c
    ccmake .
}

package_specific_register () {
    export LD_LIBRARY_PATH=${INSTALL_PATH}/lib/vtk-5.4:${LD_LIBRARY_PATH}
    export DYLD_LIBRARY_PATH=${INSTALL_PATH}/lib/vtk-5.4:${DYLD_LIBRARY_PATH}
}
