NAME=slepc-dev
SOURCE=http://www.grycap.upv.es/slepc/svn/trunk
PACKING=svn
BUILDCHAIN=autotools

MAKEOPTS="PETSC_ARCH=arch-installed-petsc"

package_specific_setup () {
    patch -p1 --forward < ${ORIG_DIR}/FEniCS/patches/slepc-dev.patch || true
    export SLEPC_DIR=${PWD}
}

package_specific_register () {
    export SLEPC_DIR=${INSTALL_PATH}
}
