NAME=parmetis-4.0.2
SOURCE=http://glaros.dtc.umn.edu/gkhome/fetch/sw/parmetis/
PACKING=.tar.gz
BUILDCHAIN=custom

package_specific_build() {
    cd metis
    make config prefix=${INSTALL_PATH} shared=1
    make -j ${PROCS}
    make install
    cd ..
    make config prefix=${INSTALL_PATH} shared=1
    make -j ${PROCS}
    make install
}

package_specific_register () {
    export PARMETIS_DIR=${INSTALL_PATH}
}
